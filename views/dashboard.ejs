<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/dashboard.css">
  <title>Admin Panel</title>
</head>
<body>

<header>
  <h1>Admin Panel (CRUD)</h1>
  <form action="/logout" method="post">
    <button type="submit" class="delete">Logout</button>
  </form>
</header>

<div class="container">

  <!-- CREATE USER -->
  <form action="/admin/create" method="POST">
    <input type="text" name="name" placeholder="Name" required />
    <input type="email" name="email" placeholder="Email" required />
    <input type="password" name="password" placeholder="Password" required />
    <button type="submit" class="create">Create User</button>
  </form>

  <hr>

  <!-- USER TABLE -->
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <!-- UPDATE USER -->
          <form action="/admin/update/<%= user._id %>" method="POST">
            <td>
              <input type="text" name="name" value="<%= user.name %>" required>
            </td>
            <td>
              <input type="email" name="email" value="<%= user.email %>" required>
            </td>
            <td>
              <button type="submit" class="update">Update</button>
            </td>
          </form>

          <!-- DELETE USER -->
          <td>
            <form action="/admin/delete/<%= user._id %>" method="POST">
              <button
                type="submit"
                class="delete"
                onclick="return confirm('Are you sure you want to delete this user?')">
                Delete
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</div>

</body>
</html>